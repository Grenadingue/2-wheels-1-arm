{
  "name": "2-wheels-1-arm",
  "version": "1.0.0",
  "description": "A genetic algorithm searching for solutions to move a simple robot",
  "main": "server.js",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "socket.io": "^1.5.0"
  },
  "devDependencies": {
    "nodemon": "^1.11.0"
  },
  "scripts": {
    "test": "echo No tests found ; exit 0",
    "install": "npm run build",
    "build": "npm run retrieve_socket.io-client && npm run build_socket.io-client",
    "retrieve_socket.io-client": "git submodule update --init --recursive",
    "build_socket.io-client": "cd algorithm/cpp/socket.io-client-cpp && cmake -DBOOST_ROOT=/usr/include/boost/ -DBOOST_VER=1.6 && make",
    "build_algorithm": "cd algorithm && node-gyp rebuild",
    "dev": "node node_modules/nodemon/bin/nodemon.js server.js",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Grenadingue/2-wheels-1-arm.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Grenadingue/2-wheels-1-arm/issues"
  },
  "homepage": "https://github.com/Grenadingue/2-wheels-1-arm#readme"
}
